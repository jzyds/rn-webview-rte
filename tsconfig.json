{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "pretty": true,
        "rootDir": "src",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "outDir": "lib",
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "dist",
        "test"
    ]
}